<h1 class="fw-bold mb-4">My Books</h1>

<p><%= link_to "To home page", root_path, class: "btn btn-secondary mb-4" %></p>

<% if @books.any? %>
  <ul class="list-group mb-4">
    <% @books.each do |book| %>
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <%= book.title %> by <%= book.author %>
        <%= button_to "Return", return_book_path(book), method: :post, class: "btn btn-primary" %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p class="fs-5 text-muted">You haven't borrowed any books yet.</p>
<% end %>
