<h1 class="mb-4">Search:</h1>
<div class="mb-4">
  <%= form_with url: books_path, method: :get, data: { turbo: false }, class: 'books_form' do |f| %>
    <div class="col-12 mb-3">
      <label class="form-label">Search by Title:</label>
      <%= f.text_field :title, class: 'form-control' %>
    </div>
    <div class="col-12 mb-3">
      <label class="form-label">Search by Author:</label>
      <%= f.text_field :author, class: 'form-control' %>
    </div>
    <div class="col-12 mb-3">
      <label class="form-label">Search by ISBN:</label>
      <%= f.text_field :ISBN, class: 'form-control' %>
    </div>
    <div class="col-12 mb-3">
      <label class="form-label">Search by Description:</label>
      <%= f.text_area :description, class: 'form-control' %>
    </div>
    <div class="col-12 mb-3">
      <label class="form-label">Search by Status:</label>
      <%= f.select :status, [['Available', 'available'], ['Borrowed', 'borrowed']], { include_blank: true }, class: 'form-select' %>
    </div>
    <div class="col-12">
      <%= f.submit 'Search', class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
<%= link_to "Back to home page", root_path, class: "btn btn-secondary" %>
<%= link_to "Back to books", books_path, class: "btn btn-secondary" %>
