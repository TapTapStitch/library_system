<div class="card mb-3" id="<%= dom_id book %>">
  <div class="card-body">
    <h5 class="card-title"><%= book.title %></h5>
    <h6 class="card-subtitle mb-2 text-muted"><%= book.author %></h6>
    <p class="card-text"><%= book.description %></p>
    <ul class="list-unstyled">
      <li><strong>ISBN:</strong> <%= book.ISBN %></li>
      <li><strong>Published date:</strong> <%= book.published_date %></li>
      <li><strong>Status:</strong> <%= book.status.capitalize %></li>
      <% if (current_user.librarian? || current_user.admin?) && book.borrowed? %>
        <li><strong>Borrowed date: </strong> <%= book.borrows.last.created_at.strftime('%d/%m/%Y') %></li>
        <li><strong>Borrowed by:</strong> <%= book.borrows.last.user_email %></li>
      <% end %>
    </ul>
    <% if show_link? %>
      <div class="text-end">
        <%= link_to "Show this book", book, class: "btn btn-sm btn-outline-secondary" %>
      </div>
    <% end %>
  </div>
</div>
