<%= form_with(model: book) do |form| %>
  <% if book.errors.any? %>
    <% flash[:alert] = pluralize(book.errors.count, "error") + " prohibited this book from being saved:" %>
    <% book.errors.full_messages.each do |msg| %>
      <% flash[:alert] += "<br/>- " + msg %>
    <% end %>
  <% end %>

  <div class="mb-3">
    <%= form.label :title, class: "form-label" %>
    <%= form.text_field :title, class: "form-control", required: true %>
    <div class="invalid-feedback">Please provide a valid book title.</div>
  </div>

  <div class="mb-3">
    <%= form.label :author, class: "form-label" %>
    <%= form.text_field :author, class: "form-control", required: true %>
    <div class="invalid-feedback">Please provide a valid book author.</div>
  </div>

  <div class="mb-3">
    <%= form.label :description, class: "form-label" %>
    <%= form.text_area :description, class: "form-control", required: true %>
    <div class="invalid-feedback">Please provide a valid book description.</div>
  </div>

  <div class="mb-3">
    <%= form.label :ISBN, class: "form-label" %>
    <%= form.text_field :ISBN, class: "form-control", required: true %>
    <div class="invalid-feedback">Please provide a valid book ISBN.</div>
  </div>

  <div class="mb-3">
    <%= form.label :published_date, class: "form-label" %>
    <%= form.date_field :published_date, class: "form-control", required: true %>
    <div class="invalid-feedback">Please provide a valid published date.</div>
  </div>

  <%= form.submit "Save book", class: "btn btn-primary" %>
  <%= link_to "Cancel", books_path, class: "btn btn-secondary" %>
<% end %>
